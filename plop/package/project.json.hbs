{
  "name": "@myraui/{{packageName}}",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{{destination}}/src",
  "projectType": "library",
  "tags": ["{{tags}}"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{{destination}}/dist",
        "rootDir": "{{destination}}/src",
        "main": "{{destination}}/src/index.ts",
        "tsConfig": "{{destination}}/tsconfig.lib.json",
        "assets": []
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{{destination}}/jest.config.ts"
      }
    }
  }
}
